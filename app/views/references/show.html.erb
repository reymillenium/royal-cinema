<br>
<h1 class="mt-4"><%= t("references.details.header") %></h1>

<ol class="breadcrumb mb-4 hidden-print">
  <li>
    <%= link_to references_path do %>
      <%= t('references.nav') %>
    <% end %>
  </li> &nbsp;/&nbsp;
  <li class="active"> <%= t('references.details.header') %></li>
</ol>

<div class="card mb-4">
  <div class="card-header">
    <%= link_to reference_path(@reference), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: t("actions.confirm"), toggle: 'tooltip', placement: 'top', disable_with: t('actions.deleting.short') }, title: t('actions.delete') do %>
      <i class="fa fa-times fa-fw" aria-hidden="true"></i>
      Delete Reference
    <% end %>

    <%= link_to edit_reference_path(@reference, return_to: reference_path(@reference)), class: "btn btn-success btn-sm", data: { toggle: 'tooltip', placement: 'top' }, title: t('actions.edit') do %>
      <i class="fa fa-pencil-alt fa-fw" aria-hidden="true"></i>
      Edit Reference
    <% end %>
  </div>

  <div class="card-body">
    <!-- Details Row # 1:  -->
    <div class="form-row">
      <div class="col-md-6">
        <div class="form-group">
          <label class="small mb-1">
            Full name:
          </label>
          <div class="form-control" style="height: 50px; vertical-align: middle !important; padding-top: 12px;">
            <%= if_applicable @reference.full_name, titleize: false %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <label class="small mb-1">
            Current job title:
          </label>
          <div class="form-control" style="height: 50px; vertical-align: middle !important; padding-top: 12px;">
            <%= if_applicable @reference.current_job_title, titleize: false %>
          </div>
        </div>
      </div>
    </div>

    <!-- Details Row # 2:  -->
    <div class="form-row">
      <div class="col-md-6">
        <div class="form-group">
          <label class="small mb-1">
            Linkedin profile:
          </label>
          <div class="form-control" style="height: 50px; vertical-align: middle !important; padding-top: 12px;">
            <%= if_applicable @reference.linkedin_profile, titleize: false %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <label class="small mb-1">
            Mobile number:
          </label>
          <div class="form-control" style="height: 50px; vertical-align: middle !important; padding-top: 12px;">
            <%= if_applicable @reference.mobile_number, titleize: false %>
          </div>
        </div>
      </div>
    </div>

    <!-- Details Row # 3: -->
    <div class="form-row">
      <div class="col-md-6">
        <!-- <div class="form-group">-->
        <%#= form.label :pertinent_date, humanize_attribute(reference_model, :pertinent_date), class: 'small mb-1' %>
        <%#= form.text_field :pertinent_date, class: 'form-control py-4', autofocus: true, autocomplete: "pertinent_date", placeholder: 'Enter the pertinent date', data: { behavior: "flatpickr" } %>
        <!-- </div>-->


        <div class="form-group">
          <label class="small mb-1">
            Pertinent date:
          </label>
          <div class="form-control" style="height: 50px; vertical-align: middle !important; padding-top: 12px;">
            <%= if_applicable @reference.pertinent_date, titleize: false %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label class="small mb-1">
            Email:
          </label>
          <div class="form-control" style="height: 50px; vertical-align: middle !important; padding-top: 12px;">
            <%= if_applicable @reference.email, titleize: false %>
          </div>
        </div>
      </div>
    </div>

    <!-- Details Row # 4: -->
    <div class="form-group">
      <label class="small mb-1">
        Letter:
      </label>
      <div class="form-control-static">
        <%= @reference.letter %>
      </div>
    </div>

    <!-- Separation Row: Makes this partial more similar to the edit/new form  -->
    <div class="form-group"></div>

    <!-- Separation Row: Makes this partial more similar to the edit/new form  -->
    <div class="form-group"></div>
  </div>
</div>
