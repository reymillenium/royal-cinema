<%
  reference = @reference || Reference.new
  return_to = @return_to
%>

<br>
<h1 class="mt-4"><%= t('references.new.header') %></h1>

<ol class="breadcrumb mb-4 hidden-print">
  <li>
    <%= link_to references_path do %>
      <%= t('references.nav') %>
    <% end %>
  </li> &nbsp;/&nbsp;
  <li class="active"> <%= t('references.create.header') %></li>
</ol>

<div class="card mb-4">
  <div class="card-header">
    <%= link_to references_path, class: "btn btn-danger btn-sm", data: { toggle: 'tooltip', placement: 'top' }, title: t('actions.back') do %>
      <i class="fa fa-hand-point-left fa-fw" aria-hidden="true"></i>
      Back
    <% end %>
  </div>

  <%= render partial: 'form', locals: {
      reference: reference,
      return_to: return_to,
  } %>
</div>
