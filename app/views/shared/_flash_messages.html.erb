<span class="success_msgs float-right mt-1" style="display: inline-block; float: right;">
  <% if notice %>
        <p class="alert alert-success">
            <%= notice %>
        </p>
    <% else %>
          <p class="alert alert-success" style="visibility: hidden;">
            <%= "" %>
        </p>
  <% end %>
</span>


<span class="error_msgs float-right mt-1" style="display: inline-block; float: right;">
  <% if alert %>
        <p class="alert alert-danger">
            <%= alert %>
        </p>
  <% else %>
          <p class="alert alert-danger" style="visibility: hidden;">
            <%= "" %>
        </p>
  <% end %>
</span>

