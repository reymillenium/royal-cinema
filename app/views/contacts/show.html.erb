<br>
<h1 class="mt-4"><%= t("contacts.details.header") %></h1>

<ol class="breadcrumb mb-4 hidden-print">
  <li>
    <%= link_to contacts_path do %>
      <%= t('contacts.nav') %>
    <% end %>
  </li> &nbsp;/&nbsp;
  <li class="active"> <%= t('contacts.details.header') %></li>
</ol>

<div class="card mb-4">
  <div class="card-header">
    <%#= link_to edit_contact_path(@contact, return_to: contact_path(@contact)), class: "btn btn-success btn-sm", data: { toggle: 'tooltip', placement: 'top' }, title: t('actions.edit') do %>
    <%= link_to "#", class: "btn btn-success btn-sm", data: { toggle: 'tooltip', placement: 'top' }, title: t('actions.edit') do %>
      <i class="fa fa-pencil-alt fa-fw" aria-hidden="true"></i>
      Edit Contact
    <% end %>
  </div>

  <div class="card-body">
    <!-- Details Row # 1:  -->
    <div class="form-group">
      <label class="small mb-1">
        Name:
      </label>
      <div class="form-control" style="height: 50px; vertical-align: middle !important; padding-top: 12px;">
        <%= if_applicable @contact.name, titleize: false %>
      </div>
    </div>

    <!-- Separation Row: Makes this partial more similar to the edit/new form  -->
    <div class="form-group"></div>

    <!-- Details Row # 2: -->
    <div class="form-group">
      <label class="small mb-1">
        Message:
      </label>
      <div class="form-control-static">
        <%= @contact.message %>
      </div>
    </div>

    <!-- Separation Row: Makes this partial more similar to the edit/new form  -->
    <div class="form-group"></div>
  </div>
</div>
